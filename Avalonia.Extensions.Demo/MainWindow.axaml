<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
        xmlns:ext="using:Avalonia.Extensions.Controls"
        x:Class="Avalonia.Controls.Demo.MainWindow"
        Title="Avalonia.Controls.Demo">
  <TabControl>
    <TabItem Header="HorizontalItemsRepeater">
      <StackPanel Orientation="Vertical">
        <TextBlock Text="{Binding Message}" Foreground="Red"/>
        <ext:HorizontalItemsRepeater Items="{Binding Items}" Command="{Binding OnButtonClick}" Spacing="20">
          <ext:HorizontalItemsRepeater.ItemTemplate>
            <DataTemplate>
              <ext:ItemsRepeaterContent CommandParameter="{Binding content}">
                <TextBlock Text="{Binding content}" />
              </ext:ItemsRepeaterContent>
            </DataTemplate>
          </ext:HorizontalItemsRepeater.ItemTemplate>
        </ext:HorizontalItemsRepeater>
      </StackPanel>
    </TabItem>
    <TabItem Header="ListView">
      <ext:ListView Items="{Binding Items}">
        <ext:ListView.ItemTemplate>
          <DataTemplate>
            <ext:ClickableView CommandParameter="{Binding content}">
              <TextBlock Text="{Binding content}" />
            </ext:ClickableView>
          </DataTemplate>
        </ext:ListView.ItemTemplate>
      </ext:ListView>
    </TabItem>
    <TabItem Header="WrapListBox">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="auto" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding Message}" Foreground="Red"/>
        <ext:CellListView Grid.Row="1" ColumnNum="4" Items="{Binding Items}" Command="{Binding OnItemClick}">
          <ext:CellListView.ItemTemplate>
            <DataTemplate>
              <ext:CellListViewCell CommandParameter="{Binding content}">
                <TextBlock Text="{Binding content}" />
              </ext:CellListViewCell>
            </DataTemplate>
          </ext:CellListView.ItemTemplate>
        </ext:CellListView>
      </Grid>
    </TabItem>
    <TabItem Header="PopupDialog">
      <Grid Name="PopupContent">
        <Button Click="OnPopupClick">Show PopupDialog</Button>
      </Grid>
    </TabItem>
    <TabItem Header="ImageRemote">
      <ScrollViewer>
        <StackPanel Orientation="Vertical">
          <ext:ImageRemote Address="https://i0.hdslb.com/bfs/live/c8e6d780a3182c37a96e79f4ed26fcb576f2520a.png" />
          <ext:ImageRemote Address="https://i0.hdslb.com/bfs/live/c8e6d780a3182c37a96e79f4ed26fcb576f2520a.png" />
          <ext:ImageRemote Address="https://i0.hdslb.com/bfs/live/c8e6d780a3182c37a96e79f4ed26fcb576f2520a.png" />
          <ext:ImageRemote Address="https://i0.hdslb.com/bfs/live/c8e6d780a3182c37a96e79f4ed26fcb576f2520a.png" />
          <ext:ImageRemote Address="https://i0.hdslb.com/bfs/live/c8e6d780a3182c37a96e79f4ed26fcb576f2520a.png" />
          <ext:ImageRemote Address="http://s1.hdslb.com/bfs/static/passport/static/img/rl_top.35edfde.png" />
          <ext:ImageRemote Address="http://s1.hdslb.com/bfs/static/passport/static/img/rl_top.35edfde.png" />
          <ext:ImageRemote Address="http://s1.hdslb.com/bfs/static/passport/static/img/rl_top.35edfde.png" />
